<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/d_gray">
	
	<RelativeLayout
	    android:id="@+id/framelayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="30dip"
	    android:background="@color/black" >

	    <TextView
	        android:id="@+id/textview_people1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_margin="10dip"
	        android:textColor="@color/white"
	        android:textSize="20sp" />

	    <!-- Custom Button -->

	    <RelativeLayout
	        android:id="@+id/relativeLayout1"
	        android:layout_width="120dp"
	        android:layout_height="80dp" >
	    </RelativeLayout>
	    <!-- End Custom Button -->

	    <Button
	        android:id="@+id/people_description"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/people_goSummary"
	        android:text="Add Description" />

	    <Button
	        android:id="@+id/people_goSummary"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:text="Go Summary" />

	    <LinearLayout
	        android:id="@+id/custom_buttom"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_below="@+id/relativeLayout1"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/shape_button_beer_mask" >

	        <ImageView
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="15dp"
	            android:src="@drawable/camera" />
	    </LinearLayout>
	</RelativeLayout>
	
</LinearLayout>