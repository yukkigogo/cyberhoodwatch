<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     
     <TextView 
         android:id="@+id/mrd_auther"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="8"
         android:text="Anonymous reported..."
         android:paddingLeft="5dp"
         android:layout_marginTop="5dp"
         android:textAppearance="?android:attr/textAppearanceSmall" 
         />
     
     <ImageView
         android:id="@+id/mrd_closebtn"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_gravity="right"
         android:paddingRight="5dp"
         android:paddingTop="5dp"
         android:clickable="true"
         android:src="@drawable/cancel1"/>
     
     </LinearLayout>
 
   	
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    >
   	<ImageView 
   	    android:id="@+id/mrd_picture"
   	    android:layout_width="90dp"
   	    android:layout_height="120dp"
   	    android:scaleType="fitStart"
   	    android:layout_marginLeft="10dp"
   	    android:src="@drawable/noimage"
   	    />
   	
      <LinearLayout 
       android:id="@+id/mrd_layout"    
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginLeft="20dp"
       android:orientation="vertical"/>
     
     
    
    </LinearLayout>
   
      

   	
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
	     
	
       
	  <LinearLayout 
	      android:layout_height="wrap_content"
	      android:layout_width="0dp"
	      android:layout_weight="1"
	      android:gravity="bottom">
 	<include layout="@layout/layout_thumb_datetime_4incident"/>    
       </LinearLayout>
       
	      <Button 
	       android:id="@+id/mrd_btn_vote"
	       android:layout_height="wrap_content"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:text="Vote"/>
	
   </LinearLayout>
</LinearLayout>
