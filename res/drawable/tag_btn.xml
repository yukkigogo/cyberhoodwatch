<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="false">
  <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        >
        
		<padding 
		    android:left="10dp"
		    android:top="10dp"
		    android:right="10dp"
		    android:bottom="10dp" />

      	<corners android:radius="5dp"/>
        <solid android:color="@color/half_gray" />
        
        
        <stroke 
            android:width="1px"
            android:color="@color/half_black" />
    </shape>
    </item>

<item android:state_checked="true">
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        >
        
      	<gradient
                android:startColor="@color/half_blue_s"
                android:endColor="@color/half_blue_e"
                android:angle="90"/>
      
      <padding 
		    android:left="10dp"
		    android:top="10dp"
		    android:right="10dp"
		    android:bottom="10dp" />
      	

   		 <corners android:radius="5dp"/>	
        
        
        <stroke 
            android:width="1px"
            android:color="@color/half_black" />
    </shape>
</item>


</selector>