<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    
    <TextView
        android:id="@+id/text_emargency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Emergency?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />
    
    <Button
        android:id="@+id/emargency_no"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emargency_yes"
        android:layout_alignBottom="@+id/emargency_yes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@color/y_blue"
        android:text="No"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/emargency_yes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_emargency"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:background="@color/no_red"
        android:text="Yes"
        android:textColor="@color/white" />

 
    
</RelativeLayout>
