<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutevidence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

	<RelativeLayout
	    android:id="@+id/framelayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="30dip"
	    android:background="@color/half_black" >

	     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null" />
	    
	  <TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:textColor="@color/white"
		    android:textSize="20sp"
		    android:layout_margin="10dip"
		    android:text="Evidence" />
	    
  

	  
	   <ImageView
            android:id="@+id/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/padding" />
	  
	  
	  <Button 
	      	android:id="@+id/evi_left"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		
		    android:layout_alignTop="@+id/padding"
            android:layout_toLeftOf="@+id/padding"
			android:paddingLeft="15dip"
            android:drawableLeft="@drawable/white_phone"	   
            android:background="@drawable/left_half_btn"
	  />
	   
	  <Button 
	      	android:id="@+id/evi_right"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		
		    android:layout_alignTop="@+id/padding"
            android:layout_toRightOf="@+id/padding"
            android:paddingRight="10dip"
            android:drawableRight="@drawable/camera_while"
            android:background="@drawable/right_half_btn"
	  />
	  
	  	   
<!--         <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:src="@drawable/camera_while" />  -->     
            
        <Button
		    android:id="@+id/evidencemidBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:text="NEXT" 
		    android:textColor="@color/white"
		    android:background="@drawable/mid_btn"/>



		<Button
		    android:id="@+id/evidencegoSummary"
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:textColor="@color/white"
		    android:text="@string/go2summary" />
        
        
    </RelativeLayout>

</LinearLayout>