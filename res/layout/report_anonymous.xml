<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rep_anonymous"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_gray"
    android:orientation="vertical" >

	<RelativeLayout
	    android:id="@+id/framelayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="30dip"
	    android:background="@color/half_black" >

	     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null" />
	    
	  <TextView
		    android:id="@+id/rep_anony_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:textColor="@color/white"
		    android:textSize="20sp"
		    android:layout_margin="10dip"
		    android:text="Anonymous Report?" />
	    
  

	  
	   <ImageView
            android:id="@+id/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/padding" />
	  
	  
	  <ToggleButton 
	      	android:id="@+id/rep_anony_left"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		
		    android:layout_alignTop="@+id/padding"
            android:layout_toLeftOf="@+id/padding"
			android:textOn="  No Add&#10;Username"
			android:textOff="  No Add&#10;Username"
			android:paddingLeft="10dip"
			android:gravity="left|center_vertical"		
			android:textColor="@color/white"		
            android:background="@drawable/left_half_btn"
	  />
	   
	  <ToggleButton 
	      	android:id="@+id/rep_anony_right"
	    	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		
		    android:layout_alignTop="@+id/padding"
            android:layout_toRightOf="@+id/padding"
			android:textOn="Yes"
			android:textOff="Yes"
			android:paddingRight="30dip"
			android:gravity="right|center_vertical"
			android:textColor="@color/white"
            android:background="@drawable/right_half_btn"
	  />
	  
	  	   

            
        <Button
		    android:id="@+id/rep_anony_midBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:text="BACK" 
		    android:textColor="@color/white"
		    android:background="@drawable/mid_btn"/>



		<Button
		    android:id="@+id/rep_anony_summary"
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:textColor="@color/white"
		    android:text="@string/go2summary" />
        
        
    </RelativeLayout>

</LinearLayout>