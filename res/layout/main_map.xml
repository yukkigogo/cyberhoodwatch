<?xml version="1.0" encoding="utf-8"?>
 	<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/main_activity"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	     >       
 
 	    <fragment
	        android:id="@+id/map"
	        android:name="com.google.android.gms.maps.SupportMapFragment"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true" />
	
	    
	    
	      
 	    <LinearLayout
 	        android:id="@+id/message_screen_onmain"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:gravity="top"
 	        android:layout_centerHorizontal="true"
 	        android:layout_marginTop="30dip"
 	        android:layout_marginLeft="45dip"
 	        android:layout_marginRight="53dip"
 	        android:clickable="true"
 	        android:orientation="vertical"      
 	        > 	        
 	        
 	       	<TextView 
 	           android:id="@+id/msg_username"
 	           android:layout_width="match_parent"
 	           android:layout_height="match_parent"
 	           android:layout_marginRight="10dip"
 	           android:layout_marginTop="5dip"
 	           android:layout_marginLeft="5dip"
 	           android:layout_marginBottom="1dip"
 	           android:textAppearance="?android:attr/textAppearanceSmall"
 	           android:textColor="@color/white"
 	           />  
 	        
 	       <TextView 
 	           android:id="@+id/msg_text"
 	           android:layout_width="match_parent"
 	           android:layout_height="match_parent"
 	           android:layout_marginRight="10dip"
 	           android:layout_marginLeft="5dip"
 	           android:textAppearance="?android:attr/textAppearanceLarge"
 	           android:textColor="@color/white"
 	           /> 

 	       
 	       
 	        <!-- thumb line  -->          
			 	  <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="horizontal"
				    android:layout_marginBottom="5dp"
				   >
				          
			      <ImageView 
			         android:id="@+id/msg_img_upthumb"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:adjustViewBounds="true"
			         android:paddingLeft="5dp"           
			         />   
			            
			     <TextView
			        android:id="@+id/msg_num_upthumb"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="5dp"       
			        android:textColor="@android:color/white"
			        />
			
			     <ImageView 
			        android:id="@+id/msg_img_downthumb"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:adjustViewBounds="true"
			        android:paddingLeft="5dp"           
				/>			     
			    
			     <TextView
			        android:id="@+id/msg_num_downthumb"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="5dp"           
			        android:textColor="@android:color/white"
			        />
			     
			     
	       <TextView 
 	           android:id="@+id/msg_text_time"
 	           android:layout_width="wrap_content"
 	           android:layout_height="wrap_content"
 	           android:paddingRight="5dp"
 	           android:paddingLeft="10dp"
 	           android:textAppearance="?android:attr/textAppearanceSmall"
 	           android:textColor="@color/white"
 	           /> 
			    
	       
			    
			     </LinearLayout>
 	       
 	       <!-- extemded screen -->
 	       <LinearLayout 
 	           android:id="@+id/message_screen_sub"
 	           android:layout_width="match_parent"
 	           android:layout_height="wrap_content"
 	           android:orientation="vertical"
 	           >
 	           
 	           <ImageView 
 	               android:id="@+id/msg_downarrow"
 	               android:layout_width="15dp"
 	               android:layout_height="15dp"
 	               android:layout_marginBottom="5dp"
 	               android:layout_gravity="center_horizontal"
 	               />
 	           
 	       </LinearLayout>	   
 	       
 	       </LinearLayout>
	    
	    
	    
 	    <!--  buttons for buttom  -->
	    <ImageButton
	        android:id="@+id/report_incident"
	        android:layout_width="90dp"
	        android:layout_height="49dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="30dp"
	        android:layout_marginLeft="5dp"
	        android:src="@drawable/report2" />
	    
	    
	   <ImageButton
	        android:id="@+id/report_msg"
	        android:layout_width="90dp"
	        android:layout_height="49dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="30dp"
	        android:layout_marginRight="5dp"
	        android:scaleType="fitCenter"
	        android:src="@drawable/add_msg" />
	    
	    

	</RelativeLayout>	
